# N8N Configuration
# ===================

# Version Information
N8N_VERSION=latest
POSTGRES_VERSION=14.17-alpine

# Base URL where n8n will be accessible
N8N_HOST=localhost
N8N_PROTOCOL=http

# Database Configuration
# ===================
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
# Generate a strong password for production use
POSTGRES_PASSWORD=change_me_in_production

# Security Configuration
# ===================
# Generate a 32+ character random string for production
N8N_ENCRYPTION_KEY=change_me_in_production_with_32+_characters

# Timezone Configuration
# ===================
TIMEZONE=UTC

# Backup Configuration
# ===================
# Number of days to keep backups (default: 7)
BACKUP_RETENTION_DAYS=7
